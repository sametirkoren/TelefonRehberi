
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header role="banner">
   
</header>

<div class="container-fluid">
    <div class="row">
        <div class="card-deck">
            <div class="card">
                <img class="card-img-top" src="https://i.hizliresim.com/AOaNNp.png" alt="Card image cap">
                <div class="card-block">
                    <h4  class="card-title text-center">Toplam Çalışan Sayısı</h4>

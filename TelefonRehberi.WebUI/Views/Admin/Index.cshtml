                <img class="card-img-top" src="https://i.hizliresim.com/zGXLOD.png" alt="Card image cap">
                <div class="card-block">
                    <h4 class="card-title text-center">Toplam Departman Sayısı</h4>
                    <button class="btn btn-dark btn-lg btn-block">@ViewBag.departmanSayisi</button>
                </div>
            </div>
            
        </div>
    </div>
</div>
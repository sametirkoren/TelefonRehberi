@model IEnumerable<Admin>
@{
    ViewData["Title"] = "Adminlistele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
  $(document).ready( function () {
      $('#table_id').DataTable(
          {
              "language": {
                  "url" : "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
              }
          }
      );
} );
</script>

<h2>Admin Kayıtları</h2>


<table class="table table-striped table-sm" id="table_id">
    <thead>
        <tr>
            <th>Admin Id</th>
            <th>Admin Eposta</th>
            <th>Admin Şifre</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdminId</td>
                <td>@item.Eposta</td>
                <td>@item.Sifre</td>
                <td> <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Guncelle" asp-route-id="@item.AdminId">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>


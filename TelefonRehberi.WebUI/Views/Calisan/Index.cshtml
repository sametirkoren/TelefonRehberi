@model IEnumerable<Calisan>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
  $(document).ready( function () {
      $('#table_id').DataTable(
          {
              "language": {
                  "url" : "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
              }
          }
      );
} );
</script>

<h2>Çalışan Kayıtları</h2>

<a class="btn btn-outline-dark mt-2 mb-2" href="/Calisan/Ekle/">Yeni Çalışan Ekle</a>


    <table class="table table-striped table-sm" id="table_id">
        <thead>
            <tr>
                <th>Çalışan Id</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Departman</th>
                <th>Telefon</th>
                <th>Yönetici Id</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CalisanId</td>
                    <td>@item.CalisanAdi</td>
                    <td>@item.CalisanSoyadi</td>
                    <td>@item.Departman.DepartmanAdi</td>
                    <td>@item.Telefon</td>
                    <td>@item.YoneticiId</td>
                    <td><a href="/Calisan/Duzenle/@item.CalisanId">Düzenle</a> | <a href="/Calisan/Sil/@item.CalisanId">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>

@model IEnumerable<Departman>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#table_id').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    });
</script>


<h2>Departman Kayıtları</h2>

<a class="btn btn-outline-dark mt-2 mb-2" href="/Departman/Ekle/">Yeni Departman Ekle</a>


<table class="table table-striped table-sm" id="table_id">
    <thead>
        <tr>
            <th>Departman Id</th>
            <th>Departman Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmanId</td>
                <td>@item.DepartmanAdi</td>
               
                <td><a class="btn btn-primary btn-sm" href="/Departman/Duzenle/@item.DepartmanId">Düzenle</a> | <a class="btn btn-danger btn-sm" href="/Departman/Sil/@item.DepartmanId">Sil</a></td>
            </tr>
        }

    </tbody>
</table>


